set nocompatible
syntax on
filetype plugin indent on

set tabstop=4
set shiftwidth=4
set expandtab
set smarttab

set backspace=indent,eol,start

set ignorecase
set smartcase

set background=dark
set wildmenu
set ruler
set laststatus=2

set hlsearch
" Map CTRL+L to also clear search highlighting
nnoremap <C-L> :nohl<CR><C-L>
